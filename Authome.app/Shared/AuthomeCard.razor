<div class="card text-white mb-3 m-3" style="max-width: 18rem;">
    <div class="card-header"><i class="fa-solid @CardTitleIcon"></i> @CardTitle</div>
    <div class="card-body">
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
            content.</p>
    </div>
</div>

@code {
	[Parameter]
	public string CardTitleIcon { get; set; } = "fa-rss";

	[Parameter]
	public string CardTitle { get; set; } = "Card";
}